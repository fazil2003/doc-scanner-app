<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Use this theme in Manifest by default -->
    <style name="LightTheme" parent="Theme.LabCA1" />

    <!-- Base application theme. -->
    <style name="Theme.LabCA1" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/primaryColor</item>

        <!-- Font used in App -->
        <item name="android:fontFamily">@font/quicksand_font</item>

        <!-- Avoid Dark Mode in Mi Devices -->
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>

        <item name="primaryColor">@color/dodgerblue</item>
        <item name="secondaryColor">@color/deepskyblue</item>
        <item name="cardViewColor">@color/white</item>
        <item name="buttonColor">@color/white</item>

    </style>
</resources>